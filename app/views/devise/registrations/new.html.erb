<div class="container">
	<div class="row">
		<div class="col-md-4 col-md-offset-4 form">
			<h2 class="centertext">Sign up</h2>

			<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>

			  <%= devise_error_messages! %>


			<div class="form-group">
			  <div><br />
				  <div class="input-group">
					  <span class="input-group-addon"><i class="fa fa-envelope"></i></span>
					  <%= f.email_field :email, class: "form-control", placeholder: "Email address", autofocus: true %>
				  </div>
			  </div>

		      <div><br />
				  <div class="input-group">
					  <span class="input-group-addon"><i class="fa fa-key"></i></span>
				      <%= f.password_field :password, class: "form-control", placeholder: "Password", autocomplete: "off" %>
			      </div>
			  </div>

			  <div><br />
				  <div class="input-group">
					<span class="input-group-addon"><i class="fa fa-key"></i></span>
				    <%= f.password_field :password_confirmation, class: "form-control", placeholder: "Password again", autocomplete: "off" %>
				  </div>
			  </div>
			</div>
			<div class="form-group">
			  <div><%= f.submit "Sign up", class: "btn btn-success" %></div>
			</div>
			<% end %>
			<hr class="quarter-rule">
			<%= render "devise/shared/links" %>
		</div>
	</div>
</div>
