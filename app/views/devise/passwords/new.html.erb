<div class="container">
	<div class="row">
		<div class="col-md-4 col-md-offset-4 form">
			<h2 class="centertext">Forgot your password?</h2>

			<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
			  <%= devise_error_messages! %>

			  <div class="form-group">
				  <div><br />
				  <div class="input-group">
				  <span class="input-group-addon"><i class="fa fa-envelope"></i></span>
				  <%= f.email_field :email, class: "form-control", placeholder: "Enter email", autofocus: true %></div>
			  	  </div>
			  </div>

			  <div class="form-group">
			  	<div><%= f.submit "Send me reset password instructions", class: "btn btn-primary" %></div>
			  </div>
			<% end %>
			<hr class="quarter-rule">
			<%= render "devise/shared/links" %>
		</div>
	</div>
</div>
